#!/bin/sh

set -e

# install depes

if [ "$USER" != "root" ]; then
	SUDO="sudo"
fi

if [ "`which tsc`" = "" ]; then
	$SUDO npm install typescript -g;
fi

if   [ ! -d libs/somes ] \
	|| [ ! -d libs/fproj/gyp ] \
	|| [ ! -d deps/v8-link ] \
	|| [ ! -d deps/ffmpeg ] \
	|| [ ! -d deps/node ] \
	|| [ ! -d deps/bplus ] \
; then
	make pull
fi

# build libs/flare
if [ ! -f libs/flare/out/flare/package.json ]; then
	cd libs/flare
	npm i
	npm run build
	cd ../..
fi

# build libs/somes
if [ ! -f libs/somes/out/somes/package.json ]; then
	cd libs/somes
	npm i
	npm run build
	cd ../..
fi

# build libs/fproj
if [ ! -f libs/fproj/out/fproj/package.json ]; then
	cd libs/fproj
	npm i
	rm -rf node_modules/somes
	cd node_modules
	ln -s ../../somes/out/somes
	cd ..
	npm run build
	cd ../..
fi

if   [ ! -d tools/node_modules/somes ] \
	|| [ ! -d tools/node_modules/fproj ] \
; then
	rm -rf tools/node_modules/*
	mkdir -p tools/node_modules
	cd tools/node_modules
	ln -s ../../libs/somes/out/somes
	ln -s ../../libs/fproj/out/fproj
	cd ../..
fi

if [ ! -d node_modules ]; then
	mkdir node_modules
	cd node_modules
	ln -s ../libs/flare/out/flare
	ln -s ../libs/somes/out/somes
	ln -s ../libs/fproj/out/fproj
	cd ..
fi

node tools/configure.js "$@"