#!/bin/sh

set -e

# install depes

if [ "$USER" != "root" ]; then
	SUDO="sudo"
fi

if [ "`which tsc`" = "" ]; then
	$SUDO npm install typescript -g;
fi

if   [ ! -d libs/somes ] \
	|| [ ! -d libs/quark ] \
	|| [ ! -d libs/qkmake ] \
	|| [ ! -d deps/v8-link ] \
	|| [ ! -d deps/ffmpeg ] \
	|| [ ! -d deps/node ] \
	|| [ ! -d deps/btree ] \
; then
	git submodule update --init --recursive
fi

# build libs/quark
if [ ! -f libs/quark/out/quark/package.json ]; then
	cd libs/quark
	npm i
	npm run build
	cd ../..
fi

# build libs/somes
if [ ! -f libs/somes/out/somes/package.json ]; then
	cd libs/somes
	npm i
	npm run build
	cd ../..
fi

# build libs/qkmake
if [ ! -f libs/qkmake/out/qkmake/package.json ]; then
	cd libs/qkmake
	npm i
	rm -rf node_modules/somes
	cd node_modules
	ln -s ../../somes/out/somes
	cd ..
	npm run build
	cd ../..
fi

if   [ ! -d tools/node_modules/somes ] \
	|| [ ! -d tools/node_modules/qkmake ] \
; then
	rm -rf tools/node_modules/*
	mkdir -p tools/node_modules
	cd tools/node_modules
	ln -s ../../libs/somes/out/somes
	ln -s ../../libs/qkmake/out/qkmake
	cd ../..
fi

if [ ! -d node_modules ]; then
	mkdir node_modules
	cd node_modules
	ln -s ../libs/quark/out/quark
	ln -s ../libs/somes/out/somes
	ln -s ../libs/qkmake/out/qkmake
	cd ..
fi

node tools/configure.js "$@"