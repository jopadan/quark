#!/bin/sh

set -e

# install depes

if [ "$USER" != "root" ]; then
	SUDO="sudo"
fi

if [ "`which tsc`" = "" ]; then
	$SUDO npm install typescript -g;
fi

if   [ ! -d libs/somes ] \
	|| [ ! -d libs/noproj/gyp ] \
	|| [ ! -d deps/v8-link ] \
	|| [ ! -d deps/ffmpeg ] \
	|| [ ! -d deps/node ] \
	|| [ ! -d deps/btree ] \
; then
	git submodule update --init --recursive
fi

# build libs/noug
if [ ! -f libs/noug/out/noug/package.json ]; then
	cd libs/noug
	npm i
	npm run build
	cd ../..
fi

# build libs/somes
if [ ! -f libs/somes/out/somes/package.json ]; then
	cd libs/somes
	npm i
	npm run build
	cd ../..
fi

# build libs/noproj
if [ ! -f libs/noproj/out/noproj/package.json ]; then
	cd libs/noproj
	npm i
	rm -rf node_modules/somes
	cd node_modules
	ln -s ../../somes/out/somes
	cd ..
	npm run build
	cd ../..
fi

if   [ ! -d tools/node_modules/somes ] \
	|| [ ! -d tools/node_modules/noproj ] \
; then
	rm -rf tools/node_modules/*
	mkdir -p tools/node_modules
	cd tools/node_modules
	ln -s ../../libs/somes/out/somes
	ln -s ../../libs/noproj/out/noproj
	cd ../..
fi

if [ ! -d node_modules ]; then
	mkdir node_modules
	cd node_modules
	ln -s ../libs/noug/out/noug
	ln -s ../libs/somes/out/somes
	ln -s ../libs/noproj/out/noproj
	cd ..
fi

node tools/configure.js "$@"